        android:textSize="20dp"
        android:text="Kurczak w cieście po meksykańsku"
        android:layout_below="@id/fotoSzczegoly"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skladnikSzczegolyLBL"
        android:layout_below="@id/tytulSzczegoly"
        android:text="POTRZEBNE SKŁADNIKI"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skladnikSzczegolyTXT"
        android:text="Blalalalkawkowdiwjfewhfebfyegfdwifhhfeigiehgiedwifwifjwifjiwdjwifwjfiwjfiwdjwd
        dwofjeifjeihgfuehguh
        fefegrgrgg"
        android:layout_below="@id/skladnikSzczegolyLBL"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etapSzczegolyLBL"
        android:text="SPOSOB PRZYGOTOWANIA"
        android:layout_below="@id/skladnikSzczegolyTXT"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_below="@id/etapSzczegolyLBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etapSzczegolyTXT"
        android:text="1. ksjuaodjwjfwf
