        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DODAJ DO ULUBIONYCH"
        android:id="@+id/ulubionyCKB"
        android:layout_below="@id/etapSzczegolyTXT"
